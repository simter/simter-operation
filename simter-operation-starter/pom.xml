    <profile>
      <id>jpa-hibernate-mysql</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <db.jpa-implementation>hibernate</db.jpa-implementation>
        <db.platform>mysql</db.platform>
        <db.port>3306</db.port>
        <db.init-mode>never</db.init-mode>
        <db.url><![CDATA[jdbc:mysql://${db.host}:${db.port}/${db.name}]]></db.url>
        <db.driver-class>com.mysql.cj.jdbc.Driver</db.driver-class>
      </properties>
      <dependencies>
        <dependency>
          <groupId>tech.simter.operation</groupId>
          <artifactId>simter-operation-dao-jpa</artifactId>
          <scope>runtime</scope>
        </dependency>
        <dependency>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-starter-data-jpa</artifactId>
          <scope>runtime</scope>
        </dependency>

        <!-- hibernate -->
        <dependency>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate-entitymanager</artifactId>
          <scope>runtime</scope>
        </dependency>
        <dependency>
          <groupId>org.hibernate.validator</groupId>
          <artifactId>hibernate-validator</artifactId>
          <scope>runtime</scope>
        </dependency>

        <!-- mysql jdbc driver -->
        <dependency>
          <groupId>mysql</groupId>
          <artifactId>mysql-connector-java</artifactId>
          <scope>runtime</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>